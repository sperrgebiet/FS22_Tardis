        <action name="tardis_resetCamera" axisType="HALF" />
	</actions>
	<inputBinding>	
		<actionBinding action="tardis_showTardisCursor">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lalt KEY_t" index="1" />
		</actionBinding>
		<actionBinding action="tardis_resetVehicle">
